<% if resource.errors.any? %>
  <%= render "govuk_publishing_components/components/error_summary", {
    title: I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase),
    items: resource.errors.full_messages.map { |error|
      {
        text: error,
      }
    }
  } %>
<% end %>

<% if flash[:alert] %>
  <%= render "govuk_publishing_components/components/error_summary", {
    title: I18n.t("errors.messages.headline"),
    items: [
      {
        text: flash[:alert],
      }
    ]
  } %>
<% end %>
