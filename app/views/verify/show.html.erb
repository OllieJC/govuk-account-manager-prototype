<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <% if @state == :ok %>
      <%= render "govuk_publishing_components/components/panel", {
        title: t("verify.show.title")
      } %>
      <%= sanitize(t("verify.show.action")) %>
    <% elsif @state != :ok && @user_id %>
      <p class="govuk-body"><a href="/verify/send?user_id=<%= sanitize(@user_id) %>"><%= t("verify.send_link") %></a></p>
    <% end %>
  </div>
</div>
