<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "govuk_publishing_components/components/heading", {
      text: t("verify.error.title"),
      heading_level: 1
    } %>

    <p class="govuk-body"><%= t("verify.error.#{@state}") %></p>

    <% if @user_id %>
      <p class="govuk-body"><a href="/verify/send?user_id=<%= sanitize(@user_id) %>"><%= t("verify.send_link") %></a></p>
    <% end %>
  </div>
</div>
